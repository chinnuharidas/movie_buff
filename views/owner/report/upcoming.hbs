
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Todays Upcoming Shows</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                <li class="breadcrumb-item active">
                                    Todays Upcoming Shows
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">

                            {{#if errorMsg }}
                            <div class="card card-danger">
                                <div class="card-header">
                                    <h3 class="card-title">Error</h3>

                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    {{ errorMsg }}
                                </div>
                            </div>
                            {{/if }}

                            {{#if successMsg }}
                            <div class="card card-success">
                                <div class="card-header">
                                    <h3 class="card-title">Success</h3>

                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    {{ successMsg }}
                                </div>
                            </div>
                            {{/if }}

                            <div class="card">
                                <div class="card-body">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Movie</th>
                                                <th>Screen</th>
                                                <th>Columns</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each mappings }}
                                            <tr>
                                                <td>{{ inc @index}}</td>
                                                <td>{{ this.movieDetails.movie_title }}</td>
                                                <td>{{ this.screenDetails.name }}</td>
                                                <td>{{#splitTime this.start_time }}
                                                    {{/splitTime }}
                                                </td>
                                                <td>
                                                    <button data-actionpath="/owner/report/seats/{{ this._id }}/{{ ../currentDateInt }}" class="btn btn-info btn_get_movie_info">
                                                        View
                                                    </button>
                                                </td>
                                            </tr>
                                            {{/each }}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>