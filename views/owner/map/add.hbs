<div class="wrapper">
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Movie-Screen-Time</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/owner">Home</a></li>
                            <li class="breadcrumb-item active">
                                Movie-Screen-Time - Add
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <form id="movieMapForm" method="POST" action="/owner/map/add">
                                    <div class="row text-danger"><div class="col-md-12 text-center error"></div></div>
                                    <div class="row">
                                        <div class="col-md-6 form-group">
                                            <input type="hidden" value="{{ owner_id }}" id="owner_id" >
                                            <label>Movie</label>
                                            <select class="select2 form-control" name="movie" id="movie" onchange="getEndTime()">
                                                <option value="">Select Movie</option>
                                                {{#each movies }}
                                                <option data-duration="{{ this.movie_arr.runtime }}" value="{{ this._id }}">{{ this.movie_title }}</option>
                                                {{/each }}
                                            </select>
                                        </div>

                                        <div class="col-md-6 form-group">
                                            <label>Screen</label>
                                            <select class="select2 form-control" id="screen" name="screen">
                                                <option value="">Select Screen</option>
                                                {{#each screens }}
                                                <option value="{{ this._id }}">{{ this.name }}</option>
                                                {{/each }}
                                            </select>
                                        </div>

                                        <div class="col-md-4 form-group">
                                            <label>Start Date</label>
                                            <input class="form-control datepicker" id="start_date" value="{{ mapping.start_date }}" name="start_date">
                                        </div>

                                        <div class="col-md-4 form-group">
                                            <label>End Date</label>
                                            <input class="form-control datepicker" id="end_date" value="{{ mapping.end_date }}" name="end_date">
                                        </div>
                                        <div class="col-md-4 form-group">
                                            <label>Start Time</label>
                                            <input onchange="getEndTime()" id="start_time" type="text" class="form-control time_format" name="start_time" style="width:100%;"/>
                                            <input id="end_time" type="hidden" class="form-control time_format" name="end_time" value="{{ mapping.end_time }}" style="width:100%;"/>
                                        
                                        </div>


                                    </div>

                                    <div class="row">
                                        <div class="col-md-12 movie_time_details text-center bg-fuchsia p-0 mb-3 font-big">
                                            
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <button type="reset"
                                                class="btn btn-secondary ml-2 float-right">Reset</button>
                                            <button type="submit" onclick="return validateMovieMapForm()"
                                                class="btn btn-primary ml-2 float-right">Save</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>