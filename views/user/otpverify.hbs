<!-- ==========Sign-In-Section========== -->
<section class="account-section bg_img" data-background="/user_assets/images/account/account-bg.jpg">
    <div class="container">
        <div class="padding-top padding-bottom">
            <div class="account-area">
                <div class="section-header-3">
                    <span class="cate">Verify OTP</span>
                    <h2 class="title">Welcome back</h2>
                </div>
                {{#if errorMsg }}
                <div class="col-lg-12 text-danger text-center">
                    {{ errorMsg }}
                </div>
                {{/if }}

                {{#if isLoginOtp }}
                <form id="userOtpVerify" class="account-form userForm" action="/loginverifyotp" method="post">
                {{else }}
                <form id="userOtpVerify" class="account-form userForm" action="/verifyotp" method="post">
                {{/if }}

                    <div class="form-group">
                        <label for="verificationCode">OTP<span>*</span></label>
                        <input name="verificationCode" type="text" placeholder="Enter OTP" id="verificationCode">
                    </div>

                    <div class="col-lg-12 resend_div" style="display:none;">
                        <fieldset class="float-end">
                            <button type="button" class="btn btn-primary btn_otp_resend">Resend OTP</button>
                        </fieldset>
                    </div>

                    <div id="otp_timer" class="col-lg-12 text-danger text-center"></div>

                    <div class="form-group text-center submit_div">
                        <button type="submit" onclick="return validateOtpVerifyForm()" id="form-submit"
                            class="">Verify OTP</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
<!-- ==========Sign-In-Section========== -->