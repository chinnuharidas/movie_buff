<!-- ==========Sign-In-Section========== -->
<section class="account-section bg_img" data-background="assets/images/account/account-bg.jpg">
    <div class="container">
        <div class="padding-top padding-bottom">
            <div class="account-area">
                <div class="section-header-3">
                    <span class="cate">hello</span>
                    <h2 class="title">welcome back</h2>
                </div>
                {{#if errorMsg }}
                <div class="col-lg-12 text-danger text-center">
                    {{ errorMsg }}
                </div>
                {{/if }}
                <form id="userLogin" class="account-form userForm" action="/login" method="post">
                    <div class="form-group">
                        <label for="mobile">Mobile<span>*</span></label>
                        <input name="mobile" type="text" placeholder="Enter Your Mobile" id="mobile">
                    </div>
                    <div class="form-group">
                        <label for="password">Password<span>*</span></label>
                        <input name="password" type="password" placeholder="Password" id="password" required>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" onclick="return validateUserLoginForm()" id="form-submit"
                            class="">LogIn</button>
                    </div>

                </form>
                <div class="option">
                    Forgot Password ? <a href="/otplogin">Log In With OTP</a>
                </div>

                <div class="option">
                    Don't have an account? <a href="/signup">Sign up now</a>
                </div>
                
            </div>
        </div>
    </div>
</section>
<!-- ==========Sign-In-Section========== -->