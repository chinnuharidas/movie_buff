<section class="movie-section padding-top padding-bottom">
    <div class="container">
        <div class="tab">
            <div class="section-header-1">
                <h2 class="title">Recommended Movies</h2>
                <a class="view-all" href="/search_movie">View All</a>
            </div>
            <div class="tab-area mb-30-none">
                <div class="tab-item active">
                    <div class="owl-carousel owl-theme tab-slider">
                        {{#each movies }}
                        <div class="item">
                            <div class="movie-grid">
                                <div class="movie-thumb c-thumb">
                                    <a
                                        href="/movie_info/{{ this.movieDetails._id }}/{{ this.movieDetails.api_movie_id }}">
                                        {{#if posterFinalFile }}
                                        <img class="img-poster" src="{{ posterFinalFile }}" alt="Movie">
                                        {{else }}
                                        <img class="img-poster"
                                            src="https://image.tmdb.org/t/p/w500{{ this.movieDetails.poster_path }}"
                                            alt="Movie">
                                        {{/if }}
                                    </a>
                                </div>
                                <div class="movie-content bg-one">
                                    <h5 class="title m-0">
                                        <a
                                            href="/movie_info/{{ this.movieDetails._id }}/{{ this.movieDetails.api_movie_id }}">{{
                                            this.movieDetails.title }}</a>
                                    </h5>
                                    <ul class="movie-rating-percent">
                                        <li>
                                            <div class="thumb">
                                                <img src="/user_assets/images/movie/tomato.png" alt="movie">
                                            </div>
                                            <span class="content">{{ this.movieDetails.vote_average }}</span>
                                        </li>
                                        <li>
                                            <div class="thumb">
                                                <img src="/user_assets/images/movie/cake.png" alt="movie">
                                            </div>
                                            <span class="content">{{ this.movieDetails.runtime }} minutes</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        {{/each }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>









