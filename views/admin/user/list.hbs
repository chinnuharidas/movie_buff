
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Users</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                <li class="breadcrumb-item active">Users</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">

                            {{#if errorMsg }}
                            <div class="card card-danger">
                                <div class="card-header">
                                    <h3 class="card-title">Error</h3>

                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    {{ errorMsg }}
                                </div>
                            </div>
                            {{/if }}

                            {{#if successMsg }}
                            <div class="card card-success">
                                <div class="card-header">
                                    <h3 class="card-title">Success</h3>

                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    {{ successMsg }}
                                </div>
                            </div>
                            {{/if }}

                            <div class="card">
                                <div class="card-body">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Mobile</th>
                                                <th>Email</th>
                                                <th>Status</th>
                                                <th>Remarks</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each theatres }}
                                            <tr>
                                                <td>{{inc @index}}</td>
                                                <td>{{ this.name }}</td>
                                                <td>{{ this.mobile }}</td>
                                                <td>{{this.email}}</td>
                                                <td>
                                                    {{#if this.isEnabled }}
                                                    <span class="text-uppercase badge badge-success">Enabled</span>
                                                    {{else }}
                                                    <span class="text-uppercase badge badge-danger">Disabled</span>
                                                    {{/if }}
                                                </td>
                                                <td>
                                                    {{this.status_update_remarks}}
                                                </td>
                                                <td>
                                                    {{#if this.isEnabled }}
                                                        <button class="btn btn-danger get_user_block_form" data-id="{{ this._id }}" data-status="disable">Disable</button>
                                                    {{else }}
                                                        <button class="btn btn-success get_user_block_form" data-id="{{ this._id }}" data-status="enable">Enable</button>
                                                    {{/if }}
                                                </td>
                                            </tr>
                                            {{/each }}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>